{
  // Python settings
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",

  // Ruff as formatter and language server
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },

  // Ruff extension settings - Full language support
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.format.args": [],
  "ruff.lint.args": [],
  "ruff.importStrategy": "fromEnvironment",
  "ruff.showNotifications": "onWarning",
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "ruff.codeAction.fixViolation.enable": true,
  "ruff.codeAction.disableRuleComment.enable": true,

  // Disable other Python formatters/linters to avoid conflicts
  "python.formatting.provider": "none",
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,

  // Use Ruff for language features (optional: Pylance can coexist)
  "python.languageServer": "Pylance",  // Keep Pylance for type checking

  // Editor settings for Python
  "editor.rulers": [100],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // TypeScript/Frontend settings
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },

  // JSON settings
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  }
}

